<h1>My Tasks</h1>
<ul class="list-unstyled mb-3">
  <% @tasks.each do |task| %>
  <li>
    <%= render "shared/checkbox", task: task %>
    <span id="task-title">
      <%= link_to task.title, task_path(task) %>
      </span>
      <span id="trash-icon"><i class="fa fa-trash-alt"></span>
  </li>
  <% end %>
</ul>
<hr>
